<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mypage_background_iv"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/ic_mypage_background"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/mypage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textStyle="bold"
        android:fontFamily="@font/mangoddobak_b"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        />

    <ImageView
        android:id="@+id/mypage_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mypage_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="73dp"
        />

    <ImageButton
        android:id="@+id/mypage_eclipse_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_mypage_eclipse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginStart="202dp"
        android:layout_marginEnd="135dp"
        />

    <ImageButton
        android:id="@+id/mypage_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_mypage_edit"
        app:layout_constraintStart_toStartOf="@id/mypage_eclipse_btn"
        app:layout_constraintEnd_toEndOf="@id/mypage_eclipse_btn"
        app:layout_constraintTop_toTopOf="@id/mypage_eclipse_btn"
        app:layout_constraintBottom_toBottomOf="@id/mypage_eclipse_btn"
        />
    <TextView
        android:id="@+id/mypage_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사과 빠진 통나무 0612"
        android:textSize="15dp"
        android:fontFamily="@font/mangoddobak_r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_profile_iv"
        android:layout_marginTop="14dp"
        />

    <ImageView
        android:id="@+id/mypage_rectangle_iv"
        android:layout_width="312dp"
        android:layout_height="123dp"
        android:src="@drawable/ic_mypage_rectangle"
        app:layout_constraintTop_toBottomOf="@id/mypage_background_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/normal_ver_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일반 버전"
        android:textSize="15dp"
        android:fontFamily="@font/mangoddobak_b"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/mypage_rectangle_iv"
        app:layout_constraintTop_toTopOf="@id/mypage_rectangle_iv"
        android:layout_marginTop="15dp"
        android:layout_marginStart="23dp"
        />

    <TextView
        android:id="@+id/ver_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023/03/01 ~ 2024/07/11"
        android:textSize="8dp"
        android:textColor="@color/middle_gray"
        android:fontFamily="@font/mangoddobak_l"
        app:layout_constraintTop_toTopOf="@id/normal_ver_tv"
        app:layout_constraintBottom_toBottomOf="@id/normal_ver_tv"
        app:layout_constraintStart_toEndOf="@id/normal_ver_tv"
        app:layout_constraintEnd_toEndOf="@id/mypage_rectangle_iv"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="13dp"
        />

    <TextView
        android:id="@+id/normal_ver_explain_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문제 풀기, 문제 유형 정리"
        android:textSize="13dp"
        android:fontFamily="@font/mangoddobak_r"
        app:layout_constraintStart_toStartOf="@id/normal_ver_tv"
        app:layout_constraintTop_toBottomOf="@id/normal_ver_tv"
        android:layout_marginTop="20dp"
        />

    <ImageButton
        android:id="@+id/upgrade_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="215dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_mypage_button"
        app:layout_constraintBottom_toBottomOf="@id/mypage_rectangle_iv"
        app:layout_constraintEnd_toEndOf="@id/ver_date_tv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/mypage_rectangle_iv" />

    <TextView
        android:id="@+id/upgrade_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업그레이드"
        android:textSize="11dp"
        android:fontFamily="@font/mangoddobak_r"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/upgrade_btn"
        app:layout_constraintEnd_toEndOf="@id/upgrade_btn"
        app:layout_constraintTop_toTopOf="@id/upgrade_btn"
        app:layout_constraintBottom_toBottomOf="@id/upgrade_btn"
        />

    <View
        android:id="@+id/mypage_view_1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/lighter_gray"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_rectangle_iv"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/mypage_subscribe_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_view_1"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/mypage_subscribe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구독"
            android:textSize="15dp"
            android:textColor="@color/information2"
            android:fontFamily="@font/mangoddobak_r"
            android:layout_marginTop="20dp"
            />

        <ImageButton
            android:id="@+id/mypage_subscribe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_mypage_next_btn"
            app:layout_constraintBottom_toBottomOf="@id/mypage_subscribe_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mypage_subscribe_tv"
            android:layout_marginStart="270dp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/mypage_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lighter_gray"
        app:layout_constraintTop_toBottomOf="@id/mypage_subscribe_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        />

    <LinearLayout
        android:id="@+id/mypage_edit_name_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_line_1"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/mypage_edit_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 정보 수정"
            android:textSize="15dp"
            android:textColor="@color/information2"
            android:fontFamily="@font/mangoddobak_r"
            android:layout_marginTop="20dp"
            />

        <ImageButton
            android:id="@+id/mypage_edit_name_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_mypage_next_btn"
            app:layout_constraintTop_toTopOf="@id/mypage_edit_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/mypage_edit_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="270dp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/mypage_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lighter_gray"
        app:layout_constraintTop_toBottomOf="@id/mypage_edit_name_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        />

    <LinearLayout
        android:id="@+id/mypage_change_password_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_line_2"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/mypage_change_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textSize="15dp"
            android:textColor="@color/information2"
            android:fontFamily="@font/mangoddobak_r"
            android:layout_marginTop="20dp"
            />

        <ImageButton
            android:id="@+id/mypage_change_password_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_mypage_next_btn"
            app:layout_constraintTop_toTopOf="@id/mypage_change_password_tv"
            app:layout_constraintBottom_toBottomOf="@id/mypage_change_password_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="270dp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/mypage_view_2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/lighter_gray"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/mypage_change_password_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/mypage_logout_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_view_2"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/mypage_logout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="15dp"
            android:textColor="@color/information2"
            android:fontFamily="@font/mangoddobak_r"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/mypage_line_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lighter_gray"
        app:layout_constraintTop_toBottomOf="@id/mypage_logout_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        />

    <LinearLayout
        android:id="@+id/mypage_withdrawal_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_line_3"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/mypage_withdrawal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원탈퇴"
            android:textSize="15dp"
            android:textColor="@color/information2"
            android:fontFamily="@font/mangoddobak_r"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>